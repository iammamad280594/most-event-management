{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler", // Adjusted to "bundler" as per your first snippet
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsxImportSource": "react",
    "lib": ["dom", "dom.iterable", "esnext"], // Combined from both snippets
    "allowJs": true, // Added from your first snippet
    "incremental": true, // Added from your first snippet
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts", // Added from your first snippet
    "app/page.tsx", // Added from your first snippet
    "app/layout.tsx", // Added from your first snippet
    "app/(auth)/_component/SignInForm.tsx", // Added from your first snippet
    "app/(auth)/_component/SignUpForm.jsx", // Added from your first snippet
    "app/api/auth/signin/route.js" // Added from your first snippet
, "app/(auth)/_component/SignInForm.jsx", "app/(auth)/signin/page.tsx"  ],
  "exclude": ["node_modules"]
}
